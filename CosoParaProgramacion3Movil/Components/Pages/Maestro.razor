@page "/maestro"
@using CosoParaProgramacion3Movil.Models
@using CosoParaProgramacion3Movil.Services

@inject UsuarioService usuarioService
@inject NavigationManager navigationManager
@inject SesionService sesionService

<h3>Lista de Usuarios</h3>
<div class="text-center">
    <button class="btn btn-primary" @onclick="Volver">Volver al Menu</button>
    <button class="btn btn-primary" @onclick="CrearUsuario">Crear Usuario</button>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @if (listaUsuarios != null && listaUsuarios.Count > 0)
        {
            @foreach (var usuario in listaUsuarios)
            {
                <tr>
                    <td width="10%"><img src="@usuario.Imagen" style="width: 100%" /></td> <!--se usa <img/> en estas etiquetas html, no se para que estan los otros-->
                    <td width="35%">@usuario.Nombre</td>
                    <td width="20%">@usuario.Rol</td>
                    <td width="35%">
                        <button class="btn btn-primary" @onclick="() => EditarProducto(usuario)">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16"><path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" /></svg>
                        
                        </button>
                        <button class="btn btn-danger" @onclick="() => BorrarUsuario(usuario)">
                            
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" /><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" /></svg>

                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No hay usuarios disponibles.</td>
            </tr>
        }
    </tbody>
</table>



@code {
    List<Usuario> listaUsuarios = new List<Usuario>();

    protected override async Task OnInitializedAsync()
    {
        @if (!sesionService.EstaAutenticado)
        {
            navigationManager.NavigateTo("/login");
        }

        listaUsuarios = usuarioService.GetUsuarios();
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/");
    }

    private void EditarProducto(Usuario usuario)
    {
        navigationManager.NavigateTo($"/maestro/{usuario.Id}");
    }

    private void BorrarUsuario(Usuario usuario)
    {
        @if (!sesionService.EstaAutenticado)
        {
            navigationManager.NavigateTo("/login");
        }
        usuarioService.DeleteUsuario(usuario.Id); //Nota: no podes usar UsuarioService, tenes que usar el nombre que le diste arriba, en este caso, usuarioService, asumo que es porque UsuarioService es el nombre REAL del servicio y por buenas practicas eso no se hace.
        //si se borran todos los usuarios, no se puede volver a agregar usuarios, resuelve eso
    }

    private void CrearUsuario()
    {
        // Navegar a la página de creación del producto
        navigationManager.NavigateTo("/maestro/0");
    }
}